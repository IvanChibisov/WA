module Workarea
  decorate Admin::PricingSkuViewModel, with: :b2b do
    def price_lists
      @price_lists ||=
        Pricing::PriceList.in(id: prices.map(&:price_list_id).compact.uniq).to_a
    end

    def price_list_hash
      @price_list_hash ||=
        price_lists.each_with_object({}) { |list, h| h[list.id] = list.name }
    end
  end
end
