.activity
  .activity__header
    .activity__avatar
      = link_to_modifier(entry) do
        = avatar_for entry.modifier
    %h3.activity__name= link_to_modifier(entry)
    %p.activity__time= activity_time(entry.created_at)
  .activity__message
    - if entry.audited.present?
      = t('workarea.admin.activities.pricing_price_list_create_html', name: link_to(entry.audited.name, pricing_price_list_path(entry.audited)))
    - else
      = t('workarea.admin.activities.pricing_price_list_create_html', name: t('workarea.admin.activities.pricing_price_list_generic'))
